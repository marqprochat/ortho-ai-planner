generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        String    @id @default(uuid())
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  clinics   Clinic[]
  patients  Patient[]
  users     User[]
}

model Clinic {
  id          String       @id @default(uuid())
  name        String
  // [NEW] Nickname for display
  nickname    String?
  address     String?
  tenantId    String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  tenant      Tenant       @relation(fields: [tenantId], references: [id])
  patients    Patient[]
  userClinics UserClinic[]
}

model UserClinic {
  id        String   @id @default(uuid())
  userId    String
  clinicId  String
  createdAt DateTime @default(now())
  clinic    Clinic   @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, clinicId])
}

model User {
  id           String          @id @default(uuid())
  email        String          @unique
  password     String
  name         String
  // [NEW] Nickname for display
  nickname     String?
  // [NEW] CRO number
  cro          String?
  avatarUrl    String?
  isSuperAdmin Boolean         @default(false)
  tenantId     String
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
  patients     Patient[]
  tenant       Tenant          @relation(fields: [tenantId], references: [id])
  appAccess    UserAppAccess[]
  userClinics  UserClinic[]
}

model Application {
  id          String          @id @default(uuid())
  name        String          @unique
  displayName String
  description String?
  icon        String?
  url         String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  permissions Permission[]
  userAccess  UserAppAccess[]
}

model Role {
  id          String          @id @default(uuid())
  name        String          @unique
  description String?
  userAccess  UserAppAccess[]
  permissions Permission[]    @relation("PermissionToRole")
}

model Permission {
  id            String       @id @default(uuid())
  action        String
  resource      String
  description   String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  applicationId String?
  application   Application? @relation(fields: [applicationId], references: [id])
  roles         Role[]       @relation("PermissionToRole")

  @@unique([action, resource])
}

model UserAppAccess {
  id            String      @id @default(uuid())
  userId        String
  applicationId String
  roleId        String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  application   Application @relation(fields: [applicationId], references: [id])
  role          Role        @relation(fields: [roleId], references: [id])
  user          User        @relation(fields: [userId], references: [id])

  @@unique([userId, applicationId])
}

model Patient {
  id               String     @id @default(uuid())
  patientNumber    String? // Patient registration number (número do paciente)
  paymentType      String? // Payment type: 'Convênio' or 'Particular'
  insuranceCompany String? // Insurance company name
  name             String
  birthDate        DateTime?
  email            String?
  phone            String?
  externalId       String?
  tenantId         String
  userId           String
  clinicId         String
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  contracts        Contract[]
  clinic           Clinic     @relation(fields: [clinicId], references: [id])
  tenant           Tenant     @relation(fields: [tenantId], references: [id])
  user             User       @relation(fields: [userId], references: [id])
  plannings        Planning[]
}

model Planning {
  id             String     @id @default(uuid())
  title          String
  status         String     @default("DRAFT")
  patientId      String
  originalReport String?
  aiResponse     String?
  structuredPlan Json?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  contracts      Contract[]
  patient        Patient    @relation(fields: [patientId], references: [id], onDelete: Cascade)
}

model Contract {
  id         String    @id @default(uuid())
  patientId  String
  content    String
  logoUrl    String?
  isSigned   Boolean   @default(false)
  signedAt   DateTime?
  planningId String?
  planning   Planning? @relation(fields: [planningId], references: [id])
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  patient    Patient   @relation(fields: [patientId], references: [id])
}

model AiApiKey {
  id        String   @id @default(uuid())
  provider  String   @unique
  key       String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
